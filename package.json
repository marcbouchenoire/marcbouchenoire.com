{
  "name": "marcbouchenoire.com",
  "version": "1.0.0",
  "description": "My personal website and portfolio.",
  "author": "Marc Bouchenoire",
  "license": "MIT",
  "repository": "https://github.com/marcbouchenoire/marcbouchenoire.com",
  "homepage": "https://marcbouchenoire.com",
  "prettier": "@marcbouchenoire/prettier-config",
  "nano-staged": {
    "**/*.{cjs,mjs}": [
      "eslint --fix",
      "yarn prettier"
    ],
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "tsatsiki --project tsconfig.json next-env.d.ts declarations.d.ts",
      "yarn prettier"
    ],
    "**/*.css": [
      "stylelint --fix",
      "yarn prettier"
    ],
    "**/*.{json,md,yml}": [
      "yarn prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "nano-staged"
    }
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "prettier": "prettier --write --loglevel silent --ignore-path .eslintignore",
    "lint": "yarn lint:eslint && yarn lint:stylelint && yarn lint:tsc && yarn lint:prettier",
    "lint:eslint": "eslint '**/*.{cjs,mjs,ts,tsx}' --fix",
    "lint:prettier": "yarn prettier '**/*.{cjs,mjs,ts,tsx,json,md,yml,css}'",
    "lint:stylelint": "stylelint '**/*.css' --fix",
    "lint:tsc": "tsc --project tsconfig.json"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "framer-motion": "^5.5.5",
    "next": "^12.0.7",
    "next-themes": "^0.0.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@marcbouchenoire/eslint-config": "^2.4.2",
    "@marcbouchenoire/prettier-config": "^1.1.0",
    "@marcbouchenoire/stylelint-config": "^1.2.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "^10.4.1",
    "eslint": "^8.6.0",
    "eslint-plugin-tailwindcss": "^3.0.3",
    "execa": "^6.0.0",
    "husky": "4.3.8",
    "nano-staged": "^0.5.0",
    "postcss": "^8.4.5",
    "postcss-nesting": "^10.1.1",
    "prettier": "^2.5.1",
    "stylelint": "^14.2.0",
    "tailwindcss": "^3.0.10",
    "tsatsiki": "^2.0.1",
    "typescript": "^4.5.4",
    "write-json-file": "^5.0.0"
  }
}
