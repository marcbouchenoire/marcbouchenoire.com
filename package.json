{
  "name": "marcbouchenoire.com",
  "version": "1.0.0",
  "description": "My personal website and portfolio.",
  "author": "Marc Bouchenoire",
  "license": "MIT",
  "repository": "https://github.com/marcbouchenoire/marcbouchenoire.com",
  "homepage": "https://marcbouchenoire.com",
  "prettier": "@marcbouchenoire/prettier-config",
  "nano-staged": {
    "**/*.{cjs,mjs}": [
      "eslint --fix",
      "pnpm prettier"
    ],
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "tsatsiki --project tsconfig.json next-env.d.ts declarations.d.ts",
      "pnpm prettier"
    ],
    "**/*.css": [
      "stylelint --fix",
      "pnpm prettier"
    ],
    "**/*.{json,md,yml}": [
      "pnpm prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "nano-staged"
    }
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "prettier": "prettier --write --log-level silent --ignore-path .eslintignore",
    "lint": "pnpm lint:eslint && pnpm lint:stylelint && pnpm lint:tsc && pnpm lint:prettier",
    "lint:eslint": "eslint '**/*.{cjs,mjs,ts,tsx}' --fix",
    "lint:prettier": "pnpm prettier '**/*.{cjs,mjs,ts,tsx,json,md,yml,css}'",
    "lint:stylelint": "stylelint '**/*.css' --fix",
    "lint:tsc": "tsc --project tsconfig.json",
    "postinstall": "node src/scripts/postinstall.mjs"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "fast-base64": "^0.1.8",
    "fast-xml-parser": "^4.2.7",
    "framer-motion": "^10.16.0",
    "hast-util-to-html": "^9.0.0",
    "hastscript": "^8.0.0",
    "html-entities": "^2.4.0",
    "next": "^13.4.19",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "swr": "^2.2.1"
  },
  "devDependencies": {
    "@marcbouchenoire/eslint-config": "^3.0.1",
    "@marcbouchenoire/prettier-config": "^1.1.0",
    "@marcbouchenoire/stylelint-config": "^2.0.1",
    "@tailwindcss/typography": "^0.5.9",
    "@types/node": "^20.5.1",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.47.0",
    "execa": "^8.0.1",
    "husky": "4.3.8",
    "nano-staged": "^0.8.0",
    "postcss": "^8.4.28",
    "postcss-nesting": "^12.0.1",
    "prettier": "^3.0.2",
    "prettier-plugin-tailwindcss": "^0.5.3",
    "stylelint": "^15.10.3",
    "tailwindcss": "^3.3.3",
    "tsatsiki": "^2.0.1",
    "typescript": "^5.1.6",
    "write-json-file": "^5.0.0"
  }
}
